<div class="w-screen min-h-screen flex flex-col lg:flex-row">
    <!-- Left Side - Image Section -->
    <div class="w-full lg:w-1/2 h-64 sm:h-80 lg:h-screen bg-[url('../img/login-image.jpg')] bg-cover bg-center">
        <div class="w-full h-full bg-gray-800/60 flex flex-col justify-center items-center gap-6 sm:gap-8 lg:gap-12 px-4">
            <img src="../img/icon-man-3.png" alt="MAN 3 Logo" class="w-32 sm:w-40 lg:w-56 h-auto">
            <h1 class="text-2xl sm:text-3xl lg:text-4xl text-white font-bold text-center">MAN 3 PEKANBARU</h1>
        </div>
    </div>

    <!-- Right Side - Form Section -->
    <div class="w-full lg:w-1/2 min-h-screen lg:h-screen bg-white flex flex-col justify-center items-center px-6 sm:px-8 lg:px-12 py-12 lg:py-0">
        <div class="w-full max-w-md text-center mb-8 sm:mb-10">
            <h2 class="text-lg sm:text-xl lg:text-2xl text-slate-900 font-bold mb-3 sm:mb-4">
                SELAMAT DATANG DI
            </h2>
            <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl text-lime-500 font-bold leading-tight">
                E-ABSENSI MAN 3 PEKANBARU
            </h1>
        </div>

        <form method="post" action="/auth/login" class="w-full max-w-md flex flex-col gap-5 sm:gap-6 lg:gap-8">
            <input 
                type="text" 
                name="username" 
                placeholder="Username" 
                class="w-full text-base sm:text-lg text-slate-800 rounded-lg border-2 border-slate-700 px-4 sm:px-6 py-2.5 sm:py-3 focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent transition" 
                required
            >
            <input 
                type="password" 
                name="password" 
                placeholder="Password" 
                class="w-full text-base sm:text-lg text-slate-800 rounded-lg border-2 border-slate-700 px-4 sm:px-6 py-2.5 sm:py-3 focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent transition" 
                required
            >
            <button 
                type="submit" 
                class="w-full text-base sm:text-lg bg-lime-500 text-white hover:bg-lime-600 active:bg-lime-700 rounded-lg font-bold px-4 sm:px-6 py-2.5 sm:py-3 transition shadow-md hover:shadow-lg"
            >
                MASUK
            </button>
        </form>
    </div>
</div>

<%- include('../partials/success-toast') %>
<%- include('../partials/error-toast') %>
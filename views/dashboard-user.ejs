<%- include('partials/navbar') %>

<div class="min-h-screen w-auto bg-slate-200 pt-24 px-16">
  <div class="bg-white w-full rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">DATA USER</h1>
      <a href="/dashboard/user/add" class="text-lg text-white bg-green-600 px-4 py-1 rounded-lg hover:bg-green-800">
        Tambah
      </a>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-200 rounded-lg">
        <thead class="bg-slate-100">
          <tr>
            <th class="px-4 py-2 border-b text-left">No</th>
            <th class="px-4 py-2 border-b text-left">Username</th>
            <th class="px-4 py-2 border-b text-left">Aksi</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <% users.forEach((u, i) => { %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2"><%= i + 1 %></td>
              <td class="px-4 py-2"><%= u.username %></td>
              <td class="px-4 py-2 space-x-2">
                <form action="/user/delete/<%= u.id %>" method="post" class="inline">
                  <button type="submit"
                    class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg text-sm">
                    Hapus
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

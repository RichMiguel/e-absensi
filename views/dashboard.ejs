<%- include('partials/navbar') %>

<div class="min-h-screen w-full bg-slate-200 pt-24 px-4 sm:px-6 md:px-8 lg:px-16">
  <div class="bg-white w-full rounded-lg shadow-md p-4 sm:p-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 mb-4">
      <h1 class="text-xl sm:text-2xl font-bold">Data Jadwal</h1>

      <a href="/dashboard/jadwal/add" 
        class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition w-full sm:w-auto text-center text-sm sm:text-base">
          Tambah
      </a>
    </div>
    
    <!-- Desktop Table View -->
    <div class="hidden lg:block overflow-x-auto">
      <table class="table-auto w-full border border-gray-200 rounded-lg">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-4 py-2 border-b text-left">No</th>
            <th class="px-4 py-2 border-b text-left">Nama</th>
            <th class="px-4 py-2 border-b text-left">Hari</th>
            <th class="px-4 py-2 border-b text-left">Tanggal</th>
            <th class="px-4 py-2 border-b text-left">Jam Masuk</th>
            <th class="px-4 py-2 border-b text-left">Aksi</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <% if (jadwal.length === 0) { %>
            <tr>
              <td colspan="6" class="px-4 py-4 text-center text-gray-500">
                Belum ada jadwal yang dibuat.
              </td>
            </tr>
          <% } else { %>
            <% jadwal.forEach((j, i) => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 text-center"><%= i + 1 %></td>
                <td class="px-4 py-2"><%= j.nama %></td>
                <td class="px-4 py-2 text-center"><%= j.hari %></td>
                <td class="px-4 py-2 text-center"><%= new Date(j.tanggal).toLocaleDateString("id-ID") %></td>
                <td class="px-4 py-2 text-center"><%= j.jam_masuk %></td>
                <td class="px-4 py-2 text-center space-x-2">
                  <a href="/dashboard/jadwal/<%= j.id %>/absensi" 
                     class="bg-green-500 text-white px-2 py-1 rounded hover:bg-green-600 transition text-sm">
                    Lihat Absensi
                  </a>
                  <a href="/dashboard/jadwal/edit/<%= j.id %>" 
                     class="bg-yellow-500 text-white px-2 py-1 rounded hover:bg-yellow-600 transition text-sm">
                    Edit
                  </a>
                  <form action="/dashboard/jadwal/delete/<%= j.id %>" method="POST" class="inline-block"
                        onsubmit="return confirm('Yakin ingin menghapus jadwal ini?');">
                    <button type="submit" 
                            class="bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600 transition text-sm">
                      Hapus
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Mobile/Tablet Card View -->
    <div class="block lg:hidden space-y-3">
      <% if (jadwal.length === 0) { %>
        <div class="text-center py-8 text-gray-500 bg-gray-50 rounded-lg">
          Belum ada jadwal yang dibuat.
        </div>
      <% } else { %>
        <% jadwal.forEach((j, i) => { %>
          <div class="bg-gray-50 rounded-lg p-4 shadow-sm border border-gray-200">
            <div class="mb-3">
              <span class="text-xs text-gray-500">No. <%= i + 1 %></span>
              <p class="font-bold text-lg mt-1"><%= j.nama %></p>
            </div>
            
            <div class="grid grid-cols-2 gap-2 mb-3 text-sm">
              <div>
                <p class="text-gray-500">Hari</p>
                <p class="font-semibold"><%= j.hari %></p>
              </div>
              <div>
                <p class="text-gray-500">Tanggal</p>
                <p class="font-semibold"><%= new Date(j.tanggal).toLocaleDateString("id-ID") %></p>
              </div>
              <div class="col-span-2">
                <p class="text-gray-500">Jam Masuk</p>
                <p class="font-semibold"><%= j.jam_masuk %></p>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col gap-2 mt-3">
              <a href="/dashboard/jadwal/<%= j.id %>/absensi" 
                 class="bg-green-500 text-white px-3 py-2 rounded-lg hover:bg-green-600 transition text-center text-sm">
                Lihat Absensi
              </a>
              <div class="flex gap-2">
                <a href="/dashboard/jadwal/edit/<%= j.id %>" 
                   class="bg-yellow-500 text-white px-3 py-2 rounded-lg hover:bg-yellow-600 transition flex-1 text-center text-sm">
                  Edit
                </a>
                <form action="/dashboard/jadwal/delete/<%= j.id %>" method="POST" class="flex-1"
                      onsubmit="return confirm('Yakin ingin menghapus jadwal ini?');">
                  <button type="submit" 
                          class="bg-red-500 text-white px-3 py-2 rounded-lg hover:bg-red-600 transition w-full text-sm">
                    Hapus
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>
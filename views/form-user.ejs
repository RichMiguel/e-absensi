<%- include('partials/navbar') %>

<div class="min-h-screen w-full bg-slate-200 pt-24 px-4 sm:px-6 md:px-8 lg:px-16 flex justify-center items-start">
  <div class="bg-white w-full max-w-lg rounded-lg shadow-md p-4 sm:p-6 my-4">
    <h1 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 text-center">Tambah User</h1>

    <form action="/dashboard/user/add" method="post" class="space-y-4 sm:space-y-5">
      <!-- Username -->
      <div>
        <label class="block text-gray-700 font-semibold text-sm sm:text-base mb-2">Username</label>
        <input 
          type="text" 
          name="username" 
          required
          placeholder="Masukkan username"
          class="border border-gray-300 rounded-lg w-full px-3 py-2 sm:py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
        >
      </div>

      <!-- Password -->
      <div>
        <label class="block text-gray-700 font-semibold text-sm sm:text-base mb-2">Password</label>
        <input 
          type="password" 
          name="password" 
          required
          placeholder="Masukkan password"
          class="border border-gray-300 rounded-lg w-full px-3 py-2 sm:py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
        >
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row justify-end gap-3 pt-2">
        <a 
          href="/dashboard/user" 
          class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 sm:py-2.5 rounded-lg transition text-center font-medium text-sm sm:text-base order-2 sm:order-1"
        >
          Batal
        </a>
        <button 
          type="submit"
          class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 sm:py-2.5 rounded-lg transition font-medium text-sm sm:text-base order-1 sm:order-2"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>